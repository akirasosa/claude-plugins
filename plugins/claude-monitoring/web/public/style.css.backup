:root {
  /* Background colors - GitHub Dark palette */
  --bg-primary: #0d1117;
  --bg-secondary: #161b22;
  --bg-tertiary: #21262d;

  /* Text colors - improved contrast */
  --text-primary: #f0f6fc;
  --text-secondary: #c9d1d9;
  --text-muted: #8b949e;

  /* Border colors */
  --border-default: #30363d;
  --border-muted: #21262d;

  /* Accent colors - vibrant */
  --accent-blue: #58a6ff;
  --accent-purple: #bc8cff;
  --accent-green: #3fb950;
  --accent-yellow: #d29922;
  --accent-red: #f85149;

  /* Status badge colors */
  --badge-stop-bg: #238636;
  --badge-stop-text: #fff;
  --badge-notification-bg: #9e6a03;
  --badge-notification-text: #fff;
  --badge-session-bg: #1f6feb;
  --badge-session-text: #fff;
  --badge-subagent-bg: #8957e5;
  --badge-subagent-text: #fff;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  background: var(--bg-primary);
  color: var(--text-primary);
  min-height: 100vh;
  font-size: 1rem;
  line-height: 1.6;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 24px;
}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border-default);
}

h1 {
  font-size: 1.75rem;
  font-weight: 600;
  color: var(--text-primary);
}

.filter-toggle {
  display: flex;
  gap: 4px;
  background: var(--bg-secondary);
  padding: 4px;
  border-radius: 8px;
  border: 1px solid var(--border-default);
}

.filter-btn {
  background: transparent;
  border: none;
  color: var(--text-muted);
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.filter-btn:hover {
  color: var(--text-secondary);
  background: var(--bg-tertiary);
}

.filter-btn.active {
  background: var(--accent-blue);
  color: white;
}

.status {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 0.9375rem;
  color: var(--text-muted);
}

.status-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  transition: background-color 0.3s;
}

.status-indicator.connected {
  background: var(--accent-green);
  box-shadow: 0 0 10px rgba(63, 185, 80, 0.6);
}

.status-indicator.disconnected {
  background: var(--accent-red);
}

.status-indicator.polling {
  background: var(--accent-yellow);
}

.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: var(--text-muted);
  font-size: 1.0625rem;
}

.empty-state p {
  margin-bottom: 10px;
}

.empty-state .hint {
  font-size: 0.9375rem;
  color: var(--text-muted);
  opacity: 0.8;
}

.events-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 1rem;
}

.events-table th {
  text-align: left;
  padding: 14px 18px;
  background: var(--bg-secondary);
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-bottom: 1px solid var(--border-default);
}

.events-table td {
  padding: 14px 18px;
  border-bottom: 1px solid var(--border-muted);
  vertical-align: top;
}

.events-table tbody tr {
  transition: background-color 0.2s;
}

.events-table tbody tr:hover {
  background: var(--bg-secondary);
}

.events-table tbody tr.read {
  opacity: 0.7;
}

.col-project {
  width: 160px;
}

.col-status {
  width: 200px;
}

.col-time {
  width: 80px;
}

.col-summary {
  min-width: 200px;
}

.col-copy {
  width: 100px;
}

.col-actions {
  width: 50px;
}

.project-name {
  font-weight: 500;
  color: var(--accent-blue);
}

.git-branch {
  margin-left: 6px;
  font-size: 0.875rem;
  color: var(--accent-purple);
  font-weight: 400;
}

.project-info {
  margin-bottom: 4px;
}

.session-info {
  display: flex;
  gap: 8px;
  font-size: 0.75rem;
  color: var(--text-muted);
  font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, monospace;
}

.tmux-id {
  color: var(--accent-yellow);
}

.session-id {
  opacity: 0.7;
}

.status-badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 0.8125rem;
  font-weight: 500;
}

/* Badge wrapper for two-part badges */
.status-badge-wrapper {
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

/* Subtype tag - muted styling for visual hierarchy */
.status-badge-subtype {
  display: inline-block;
  padding: 2px 6px;
  border-radius: 8px;
  font-size: 0.6875rem;
  font-weight: 500;
  background: var(--bg-tertiary);
  color: var(--text-muted);
  border: 1px solid var(--border-default);
}

/* BEM-style badge modifiers */
.status-badge--stop {
  background: var(--badge-stop-bg);
  color: var(--badge-stop-text);
}

.status-badge--notification {
  background: var(--badge-notification-bg);
  color: var(--badge-notification-text);
}

.status-badge--sessionstart {
  background: var(--badge-session-bg);
  color: var(--badge-session-text);
}

.status-badge--subagentstop {
  background: var(--badge-subagent-bg);
  color: var(--badge-subagent-text);
}

.status-badge--sessionend {
  background: var(--text-muted);
  color: var(--bg-primary);
}

.time {
  color: var(--text-muted);
  font-size: 0.9375rem;
  font-variant-numeric: tabular-nums;
}

.summary {
  color: var(--text-secondary);
  max-width: 400px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.copy-btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: var(--bg-tertiary);
  border: 1px solid var(--border-default);
  color: var(--text-secondary);
  padding: 6px 10px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
}

.copy-btn:hover {
  background: var(--border-default);
  border-color: var(--text-muted);
  color: var(--text-primary);
}

.copy-btn:active {
  transform: scale(0.98);
}

.copy-btn.copied {
  color: var(--accent-green);
}


.copy-btn svg {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

.no-tmux {
  color: var(--text-muted);
  font-style: italic;
  font-size: 0.875rem;
  opacity: 0.7;
}

.end-session-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: 1px solid var(--border-default);
  color: var(--text-muted);
  padding: 6px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
}

.end-session-btn:hover {
  background: var(--accent-red);
  border-color: var(--accent-red);
  color: white;
}

.end-session-btn:active {
  transform: scale(0.95);
}

.end-session-btn svg {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

.toast {
  position: fixed;
  bottom: 24px;
  right: 24px;
  background: var(--bg-tertiary);
  color: var(--text-primary);
  padding: 14px 26px;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
  font-size: 0.9375rem;
  transition: opacity 0.3s, transform 0.3s;
  z-index: 1000;
}

.toast.hidden {
  opacity: 0;
  transform: translateY(10px);
  pointer-events: none;
}

.toast.success {
  background: var(--badge-stop-bg);
}

.toast.error {
  background: var(--accent-red);
}

.hidden {
  display: none !important;
}

/* Cleanup button */
.cleanup-btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: var(--bg-tertiary);
  border: 1px solid var(--border-default);
  color: var(--text-secondary);
  padding: 8px 14px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 0.875rem;
  font-weight: 500;
}

.cleanup-btn:hover {
  background: var(--accent-red);
  border-color: var(--accent-red);
  color: white;
}

.cleanup-btn:active {
  transform: scale(0.98);
}

.cleanup-btn svg {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

/* Modal animations */
@keyframes modal-fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes modal-scale-in {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: modal-fade-in 0.15s ease-out;
  overscroll-behavior: contain;
}

.modal-content {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 12px;
  padding: 24px;
  max-width: 480px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  animation: modal-scale-in 0.15s ease-out;
}

/* Respect reduced motion preference */
@media (prefers-reduced-motion: reduce) {
  .modal,
  .modal-content {
    animation: none;
  }
}

.modal-content h2 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16px;
}

.modal-content p {
  color: var(--text-secondary);
  margin-bottom: 16px;
}

.cleanup-list {
  list-style: none;
  max-height: 200px;
  overflow-y: auto;
  background: var(--bg-tertiary);
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 20px;
}

.cleanup-list li {
  padding: 8px 0;
  border-bottom: 1px solid var(--border-muted);
  color: var(--text-secondary);
  font-size: 0.9375rem;
}

.cleanup-list li:last-child {
  border-bottom: none;
}

.cleanup-list .session-id {
  color: var(--text-muted);
  font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, monospace;
  font-size: 0.75rem;
  margin-left: 8px;
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
}

.modal-btn {
  padding: 10px 20px;
  border-radius: 6px;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.modal-btn.cancel {
  background: var(--bg-tertiary);
  border: 1px solid var(--border-default);
  color: var(--text-secondary);
}

.modal-btn.cancel:hover {
  background: var(--border-default);
  color: var(--text-primary);
}

.modal-btn.confirm {
  background: var(--accent-red);
  border: 1px solid var(--accent-red);
  color: white;
}

.modal-btn.confirm:hover {
  background: #da3633;
  border-color: #da3633;
}

.modal-btn:focus-visible {
  outline: 2px solid var(--accent-blue);
  outline-offset: 2px;
}

@media (max-width: 768px) {
  .container {
    padding: 16px;
  }

  header {
    flex-wrap: wrap;
    gap: 12px;
  }

  .filter-toggle {
    order: 3;
    width: 100%;
    justify-content: center;
  }

  .filter-btn {
    flex: 1;
    text-align: center;
  }

  .events-table th,
  .events-table td {
    padding: 10px 14px;
  }

  .col-copy {
    display: none;
  }

  .summary {
    max-width: 200px;
  }

  h1 {
    font-size: 1.5rem;
  }
}
