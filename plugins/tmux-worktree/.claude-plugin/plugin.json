{
  "name": "tmux-worktree",
  "version": "3.5.0",
  "description": "Git worktree workflow with tmux integration for parallel Claude Code sessions",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/src/ensure-gtrconfig.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/detect-pr-completion.ts"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "worktree": {
      "command": "bun",
      "args": ["run", "${CLAUDE_PLUGIN_ROOT}/src/mcp/server.ts"]
    }
  }
}
