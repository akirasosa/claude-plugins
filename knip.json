{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "plugins/claude-monitoring/src/cli.ts",
        "plugins/claude-monitoring/src/db/index.ts",
        "plugins/claude-monitoring/src/notification/index.ts",
        "plugins/tmux-worktree/src/ensure-gtrconfig.ts",
        "plugins/tmux-worktree/src/mcp/server.ts",
        "plugins/**/*.test.ts"
      ],
      "project": ["plugins/**/*.ts"],
      "ignore": ["plugins/claude-monitoring/web/**", "plugins/claude-monitoring/shared/**"]
    },
    "plugins/claude-monitoring/web": {
      "project": ["**/*.ts"],
      "ignore": ["src/**", "vite.config.ts"],
      "vite": false
    }
  }
}
