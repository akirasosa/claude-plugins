{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [],
      "project": [],
      "ignoreDependencies": ["@modelcontextprotocol/sdk"]
    },
    "plugins/claude-monitoring": {
      "entry": [
        "src/cli.ts",
        "src/db/index.ts",
        "src/notification/index.ts",
        "shared/types.ts",
        "**/*.test.ts"
      ],
      "project": ["src/**/*.ts", "shared/**/*.ts"]
    },
    "plugins/claude-monitoring/web": {
      "vite": true,
      "entry": ["src/app.ts", "src/test/setup.ts", "**/*.test.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["tailwindcss"],
      "ignore": ["src/sse.ts", "src/ui.ts", "src/types.ts"]
    },
    "plugins/tmux-worktree": {
      "entry": ["src/ensure-gtrconfig.ts"],
      "project": ["src/**/*.ts"]
    }
  }
}
